<?xml version="1.0"?>
<launch>

  <!-- genius front -->
  <include file="$(find francor_launch)/launch/camera_genius.launch" />
  <!-- genius back -->
  <include file="$(find francor_launch)/launch/camera_genius_back.launch" />

  <!-- orbec 3d cam (only rgb)-->
  <include file="$(find francor_launch)/launch/camera_astra.launch" />


  <!-- topics to multiplex -->
  <arg name="driver_camera_topic" default="front_cam/image_raw/compressed"/>
  <arg name="manip_camera_topic"  default="back_cam/image_raw/compressed"/>

  <node pkg="topic_tools" type="mux" name="mux_drive_img" args="drive_cam $(arg driver_camera_topic) $(arg manip_camera_topic)">
    <!--remap from="mux/selected" to="img_perception"/-->
  </node>

  <!-- sensor head (rosserial) -->
  <node name="serial_node_sensor_head" pkg="rosserial_python" type="serial_node.py" output="screen" respawn="true">
    <param name="port" value="/dev/sensor_head" />
    <param name="baud" value="57600" />
  </node>

  <!-- motor controller -->
  <node name="motor_controller_node" pkg="francor_motor_controller" type="motor_controller" output="log">
    <param name="plus_bogie_up"   type="double" value="0.1"/>
    <param name="speed_bogie_up"  type="double" value="0.2"/>
  </node>


</launch>
